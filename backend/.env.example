AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Docker Configuration (usado quando rodando em containers)
# Estas variáveis sobrescrevem as configurações locais quando usando Docker
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=film_catalog
DB_USERNAME=film_user
DB_PASSWORD=password

REDIS_HOST=redis
REDIS_PORT=6379

# Docker Configuration (usado pelo docker-compose)
# User/Group IDs - deve corresponder ao seu usuário do host
# Execute 'id' no terminal para obter seus valores
HOST_UID=1000
HOST_GID=1000

# MySQL Database Configuration (usado pelo docker-compose)
MYSQL_DATABASE=film_catalog
MYSQL_ROOT_PASSWORD=root
MYSQL_PASSWORD=password
MYSQL_USER=film_user
MYSQL_PORT=3307

# Service Ports
NGINX_PORT=8000
REDIS_PORT=6379

# TMDB API Key (obtenha em https://www.themoviedb.org/settings/api)
TMDB_API_KEY=

# Resend API Key (para envio de emails)
RESEND_KEY=

# Frontend URL
FRONTEND_URL=http://localhost:5173
