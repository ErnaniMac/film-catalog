# Docker user/group IDs - deve corresponder ao seu usuário do host
# Execute 'id' no terminal para obter seus valores
HOST_UID=1000
HOST_GID=1000

# MySQL Database Configuration (usado pelo docker-compose)
MYSQL_DATABASE=film_catalog
MYSQL_ROOT_PASSWORD=root
MYSQL_PASSWORD=password
MYSQL_USER=film_user
MYSQL_PORT=3307

# Service Ports
NGINX_PORT=8000
NODE_PORT=5173
REDIS_PORT=6379

# Nota: As configurações do Laravel (DB_*, REDIS_*) estão no backend/.env
# O docker-compose.yml usa env_file para ler do backend/.env automaticamente
